<SoundDataNode name="Minigun_fire"> <AudioSource name="@:Sounds/Prefabs/AudioSource_WeaponFire.prefab"/> <NetworkAudioSource name="@:Sounds/Prefabs/AudioSource_WeaponFire_Network.prefab"/>
	<Noise ID="0" noise="108" time="2" muffled_when_crouched="0.8" heat_map_strength="0.45" heat_map_time="180"/>
	<AudioClip ClipName="@:Sounds/Weapons/Ranged/M136/m136_fire.wav"/>
